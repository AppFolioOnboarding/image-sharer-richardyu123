<div class="card">
  <%= image_tag(img.link, width: "350")%>
  <div class="card-body">
    <h5 class="card-title">Tags:</h5>
    <p class="card-text">
      <% img.tag_list.each do |tag|%>
        <%= link_to tag, images_path(tags: tag) %>
      <% end %>
    </p>
    <%= link_to 'Delete', image_path(img), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  </div>
</div>

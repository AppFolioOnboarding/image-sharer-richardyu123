<div class="card">
  <%= link_to image_tag(img.link, width: "350"), image_path(img) %>
  <div class="card-body">
    <h5 class="card-title">Tags:</h5>
    <p class="card-text js-tags">
      <% img.tag_list.each do |tag|%>
        <%= link_to tag, images_path(tags: tag) %>
      <% end %>
    </p>
    <div class="btn btn-primary" data-toggle="modal"
         data-target="#shareImage">Share</div>

    <!-- Modal -->
    <div class="modal" id="shareImage" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Share Image</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for image_email, remote: true do |form| %>
              <%= form.hidden_field :image_link, value: img.link  %>
              <%= form.input :address, label: 'Recipient Email Address:', label_html: { class: "modal_label" } %>
              <%= form.input :message, label: 'Message:', label_html: { class: "modal_label" } %>
          </div>
          <div class="modal-footer">
            <%= form.submit 'Send', class: "btn btn-outline-primary" %>
            <% end %>
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <%= link_to 'Edit tags', edit_image_path(img), class: 'btn btn-primary' %>
    <%= link_to 'Delete', image_path(img), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  </div>
</div>

